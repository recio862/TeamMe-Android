 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
  
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
 
    <ImageView
        android:id="@+id/image55"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FF000000"
        android:contentDescription="@string/app_name"
        android:scaleType="center" />

    <TextView
        android:id="@+id/myImageViewText55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:drawableLeft="@drawable/creategame"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="View Game"
        android:textColor="#FC8F00"
        android:textSize="30sp"
        android:textStyle="bold" />

 

    <LinearLayout
        android:id="@+id/linear155"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image55"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Team_Name55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="Team Name:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
   <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />
        
        <EditText
            android:id="@+id/teamName55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
                 android:inputType="text"
                 android:enabled = "false"
            android:background="@android:drawable/edit_text" />
    </LinearLayout>

    <View
        android:id="@+id/center_divider55"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear155"
        android:layout_marginTop="10dp"
        android:alpha="0.10"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/linear255"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_divider55"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Team_Name255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="Activity Type:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear355"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear255"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radiogroup55"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio_pirates55"
                android:layout_width="wrap_content"
                   android:enabled = "false"
                android:layout_height="wrap_content"
                android:text="Select Activity From List" />

            <Spinner
                android:id="@+id/spinner155"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                   android:enabled = "false"
                android:layout_marginRight="70dp"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/spinner_items"
                android:spinnerMode="dropdown" />

            <RadioButton
                android:id="@+id/radio_ninjas55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:enabled = "false"
                android:text="Custom Activity" />

            <EditText
                android:id="@+id/username555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                   android:enabled = "false"
                android:layout_marginLeft="30dp"
                     android:inputType="text"
                android:layout_marginRight="70dp"
                android:background="@android:drawable/edit_text" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:id="@+id/center_divider255"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear355"
        android:layout_marginTop="20dp"
        android:alpha="0.10"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/linear455"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_divider255"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/num_players_label55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="# Players Active:  "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" 
           />

     <EditText
            android:id="@+id/num_players55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
             android:inputType="number"
                android:enabled = "false"
            android:background="@android:drawable/edit_text" />
        
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear555"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear455"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/num_players_label255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="# Players Needed:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

     <EditText
            android:id="@+id/num_players255"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
               android:enabled = "false"
             android:inputType="number"
            android:background="@android:drawable/edit_text" />
        
        
    </LinearLayout>

    
     <View
        android:id="@+id/center_divider355"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear555"
        android:layout_marginTop="10dp"
        android:alpha="0.10"
        android:background="#000000" />
  
      <LinearLayout
        android:id="@+id/linear655"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_divider355"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Time_remaining55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="Expected Finish Time:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    
       <LinearLayout
        android:id="@+id/linear755"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_divider355"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
  <TimePicker
        android:id="@+id/timePicker155"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
      
</RelativeLayout>
 </ScrollView>