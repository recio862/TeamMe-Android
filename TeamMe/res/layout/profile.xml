<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teammebackground2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom = "40dp" >

        <com.teamme.AnimatedView
            android:id="@+id/anim_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha=".2" />

        <TextView
            android:id="@+id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/profileoverflow"
            android:drawablePadding="15dp"
            android:text="My Profile"
            android:textColor="#FC8F00"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/myProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:contentDescription="@string/profile_pic"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            
            android:src="@drawable/default_profile" />

         <TextView
            android:id="@+id/picinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below = "@+id/profile_pic"
            android:text="Click Icon To Change Image!"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picinfo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Username:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profile_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/profile_name"
            android:background="@android:drawable/edit_text"
            android:inputType="text" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Email:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/email"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/email"
            android:background="@android:drawable/edit_text"
            android:inputType="text" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Phone Number:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone_number"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/phone_number"
            android:background="@android:drawable/edit_text"
            android:inputType="phone" />

        <TextView
            android:id="@+id/new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="New Password:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/new_password"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/new_password"
            android:background="@android:drawable/edit_text"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/confirm_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_password"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Confirm New Password:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/confirm_new_password"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/confirm_new_password"
            android:background="@android:drawable/edit_text"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/view_team_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_new_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom = "50dp"
            android:layout_marginTop="40dp"
            android:background="#FC8F00"
            android:text="Confirm Changes" />
        
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_team_button"
        android:orientation="vertical"
        android:layout_marginBottom = "40dp" />
    </RelativeLayout>

</ScrollView>