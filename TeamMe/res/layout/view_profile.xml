<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.teamme.AnimatedView
            android:id="@+id/anim_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha=".2" />

     

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/profile_pic"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@+id/myProfile"
                android:paddingTop="5dp"
                android:src="@drawable/default_profile" />

            <TextView
                android:id="@+id/myProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="15dp"
                android:text="View Profile"
                android:textColor="#FC8F00"
android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textStyle="bold" />
        

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myProfile"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Username:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profile_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/profile_name"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Email:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/email"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/email" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Phone Number:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone_number"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/phone_number"/>

       

       
    </RelativeLayout>

</ScrollView>