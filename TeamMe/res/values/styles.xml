<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="thin_ab" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle" >@style/thin_ab_style</item>
    </style>

    <style name="thin_ab_style" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">80dp</item>
        <item name="android:background">@android:color/black</item>
   
 <item name="android:titleTextStyle">@style/titleTextStyles</item>
    </style>
    
    <style name="titleTextStyles" parent="@android:style/TextAppearance.Medium">
          <item name = "android:textColor">#FC8F00</item>
           <item name="android:textStyle">bold</item>
          <item name="android:textSize">40sp</item>
          
        
          </style>
          
     <style name="ChromeStylePopup" parent="android:Widget.TextView">
<item name="android:gravity">center</item>
<item name="android:minHeight">50dp</item>
<item name="android:minWidth">75dp</item>
<item name="android:maxWidth">150dp</item>
<item name="android:padding">6dp</item>
<item name="android:textColor">@android:color/white</item>
<item name="android:textStyle">bold</item>
<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
</style>
</resources>
