<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="thin_ab" parent="android:Theme.Holo.Light">
         <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="android:actionBarStyle" >@style/thin_ab_style</item>
         <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
         
    </style>

    <style name="thin_ab_style" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">50dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textStyle">bold</item>
      
   
 <item name="android:titleTextStyle">@style/titleTextStyles</item>
    </style>
    
    <style name="titleTextStyles" parent="@android:style/TextAppearance.Medium">
          <item name = "android:textColor">#FC8F00</item>
           <item name="android:textStyle">bold</item>
          <item name="android:textSize">30sp</item>
          
        
          </style>
          
         

   
    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
       <item name="android:background">@android:color/black</item>
      <item name="android:alpha">0.7</item>
      <item name="android:textStyle">bold</item>
        <item name="android:popupBackground">@drawable/overflow</item>
    </style>

<style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
 
    <item name="android:src">@drawable/options2</item>
</style>

     <style name="ChromeStylePopup" parent="android:Widget.TextView">
<item name="android:gravity">center</item>
<item name="android:minHeight">50dp</item>
<item name="android:minWidth">75dp</item>
<item name="android:maxWidth">150dp</item>
<item name="android:padding">6dp</item>
<item name="android:textColor">@android:color/white</item>
<item name="android:textStyle">bold</item>
<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
</style>
</resources>
